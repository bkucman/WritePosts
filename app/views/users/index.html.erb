<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-md-4">E-amil</th>
        <th class="col-md-4">Username</th>
        <th class="col-md-4">Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="col-md-4"><%= user.email %></td>
          <td class="col-md-4"><%= user.username %></td>
          <td class="col-md-2"><%= users_roles(user) %></td>
          <td><%= link_to 'Show', users_path, class: "btn btn-primary" %></td>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>