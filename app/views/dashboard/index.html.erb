<%= flash_messages %>
<div class="block">
	<header class="header-group">
		<h2>Najpopularniejsze tematy</h2>
	</header>
	<% @topics.each_slice(4) do |slice| %>
  <div class="row">
    <% slice.each do |topic| %>
      <div class="col-md-3 text-center">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= topic.name %></h3>
            <p><%= simple_format(truncate(topic.desc, length: 30)) %></p>
            <p><%= topic.user.username %></p>
            <p><%= topic.comments.count %> </p>
            <p> <%= link_to 'Wyświetl', topic, class: "btn btn-primary" %></p>
          </div>
          </div>
        </div>
    <% end %>
  </div>
<% end %>
<hr />
<h2>Najnowsze newsy</h2>
<% @news.each_slice(4) do |slice| %>
  <div class="row">
    <% slice.each do |news| %>
      <div class="col-md-3 text-center">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= news.name %></h3>
            <p><%= simple_format(truncate(news.desc, length: 60)) %></p>
            <p> <%= link_to 'Wyświetl', news, class: "btn btn-primary" %></p>
          </div>
          </div>
        </div>
    <% end %>
  </div>
<% end %>
<hr />
	<div class="row">
		<div class="col-md-12">
		</div>
	</div>

</div>
