<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th class="col-md-4">Name</th>
        <th class="col-md-4">Desc</th>
        <th class="col-md-2">Author</th>
        <th class="col-md-2">Published</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td class="col-md-4"><%= topic.name %></td>
          <td class="col-md-4"><%= topic.desc %></td>
          <td class="col-md-2"><%= topic.user.try(:username) %></td>
          <td class="col-md-2"><%= topic.published %></td>
          <td><%= link_to 'Show', topic, class: "btn btn-primary" %></td>
          <td>
            <% if can? :update, topic %>
                <%= link_to 'Edit', edit_topic_path(topic), class: "btn btn-warning" %>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, topic %>
              <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>